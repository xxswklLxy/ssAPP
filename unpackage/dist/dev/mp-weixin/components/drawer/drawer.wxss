/* flex */
.flex-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.flex-box > .item-2 {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 50%;
          flex: 0 0 50%;
}
.side-nav {
  position: fixed;
  z-index: 99;
  left: 0;
  top: 0;
  height: 100%;
  width: 600rpx;
  background-color: #fff;
  overflow-x: hidden;
  -webkit-transition: 0.5s;
  transition: 0.5s;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  box-shadow: 0 0 5px #888888;
}
.side-nav.left {
  -webkit-transform: translateX(760rpx);
          transform: translateX(760rpx);
}
.side-nav.left.show {
  -webkit-transform: translateX(150rpx);
          transform: translateX(150rpx);
}
.side-nav.right {
  -webkit-transform: translateX(-760rpx);
          transform: translateX(-760rpx);
}
.side-nav.right.show {
  -webkit-transform: translateX(0);
          transform: translateX(0);
}
.side-nav .body {
  height: 100%;
  overflow-y: auto;
}
.side-nav .item:nth-of-type(1) {
  height: 0;
}
.side-nav .item:nth-of-type(1) {
  -webkit-box-flex: 1;
  -webkit-flex: 1 0 auto;
          flex: 1 0 auto;
}
.side-nav .action-area .item-2 button {
  border-radius: 0;
  line-height: 96rpx;
}

